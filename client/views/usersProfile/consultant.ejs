<!-- Appointment Modal  -->

<div class="modal fade" id="appointmentModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" style="margin-top: 17%;">
        <div class="modal-content">
            <div class="modal-body form-modal">
                <form action="">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                    <h4>Appointment</h4>
                    <div class="row">
                        <div class="col-sm-9 mb-2">
                            <label for="patientName">Doctor Name</label>
                            <input id="patientName" class="form-control rounded col-xs-12" type="text"
                                placeholder="Doctor Name" disabled>
                        </div>
                        <div class="col-sm-3 mb-2">
                            <label for="appointmentDate">Date</label>
                            <input id="appointmentDate" class="form-control" type="date" class="form-control rounded"
                                name="appointmentDate" value="">
                        </div>
                        <div class="col-sm-9 mb-2">
                            <textarea id="describeIllness" rows="4" class="form-control rounded col-xs-12" type="text"
                                placeholder="Describe your Illness"></textarea>
                        </div>
                        <div class="col-sm-3 mb-2">
                            <select id="serialWiseTime" name="serialWiseTime" class="form-control">
                                <option value="0" selected disabled>Time</option>
                                <option value="">11:10 AM</option>
                                <option value="">01:10 PM</option>
                                <option value="">03:10 PM</option>
                            </select>
                        </div>
                        <!-- TODO: when doc is available -->
                        <div class="col-sm-12 col-xs-height">
                            <input type="text" placeholder="TODO: When doc is available" disabled>
                        </div>
                        <div class="col-sm-12 col-xs-height">
                            <div>
                                <button class="btn btn-warning mt-2" type="button">Check Time Conflict</button>
                                <button style="float: right" class="btn btn-success mt-2" type="submit">Submit</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

